{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% oro_title_set({params : {"%entity.code%": entity.code|default('N/A') }}) %}

{% if form.vars.value.id %}
    {% set formAction = path('issue_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('issue_create') %}
{% endif %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('issue_index'),
        'indexLabel': 'andy.bug_track.entity_plural_label'|trans,
        'entityTitle': form.vars.value.summary
        } %}
        {{ parent() }}
    {% elseif entity.parentIssue is not empty %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'andy.bug_track.subissue.entity_label'|trans}) ~ ' (for ' ~ entity.parentIssue.code ~ ')' %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'andy.bug_track.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block breadcrumb %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = [
        { label: 'andy.bug_track.entity_plural_label'|trans },
        { label: 'andy.bug_track.menu.issue_update'|trans }
        ] %}
    {% else %}
        {% set breadcrumbs = [
        { label: 'andy.bug_track.entity_plural_label'|trans },
        { label: 'andy.bug_track.menu.issue_create'|trans }
        ] %}
    {% endif %}
    {% include 'OroNavigationBundle:Menu:breadcrumbs.html.twig' %}
{% endblock breadcrumb %}


